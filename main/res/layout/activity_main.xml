<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lab2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a name below:"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvuptop" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="108dp"
        android:id="@+id/badd" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bcancel"
        android:layout_toEndOf="@+id/bcancel"
        android:layout_marginStart="19dp"
        android:id="@+id/bclear" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:id="@+id/bcancel"
        android:layout_alignBaseline="@+id/badd"
        android:layout_alignBottom="@+id/badd"
        android:layout_alignEnd="@+id/editText"
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bcancel"
        android:layout_toStartOf="@+id/bcancel"
        android:layout_marginBottom="33dp"
        android:id="@+id/rbmale"
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rbmale"
        android:layout_centerHorizontal="true"
        android:id="@+id/rbfemale"
        android:onClick="onRadioButtonClicked"/>

    <RadioButton
        android:text="Engineer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rbfemale"
        android:layout_alignParentEnd="true"
        android:id="@+id/rbengineer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/badd"
        android:layout_alignStart="@+id/rbmale"
        android:layout_marginTop="24dp"
        android:id="@+id/tvoutcome"
        android:visibility="invisible"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvoutcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/tvint" />

    <Button
        android:text="Decrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/binc"
        android:layout_toEndOf="@+id/bcancel"
        android:id="@+id/bdec" />

    <Button
        android:text="Increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/binc"
        android:layout_below="@+id/tvint"
        android:layout_alignParentStart="true" />


</RelativeLayout>
